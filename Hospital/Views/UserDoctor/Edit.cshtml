@model Hospital.Models.ShowVisitsViewModel

<h2>Edit Time Slot</h2>

<form asp-controller="UserDoctor" asp-action="Edit" method="post">
    <input type="hidden" asp-for="TimeSlotId" />
    <input type="hidden" asp-for="Time" />
    <input type="hidden" asp-for="PersonName" />
    <input type="hidden" asp-for="Date" />

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <button type="submit">Save</button>
</form>